	<script type="text/javascript" src="/view/js/shBrushPlain.js"></script>
	<script type="text/javascript" src="/view/js/shBrushPhp.js"></script>
	<script type="text/javascript" src="/view/js/shBrushCss.js"></script>
	<script type="text/javascript" src="/view/js/shBrushXml.js"></script>
	<link href="/view/css/shCore.css" rel="stylesheet" type="text/css" />
	<link href="/view/css/shThemeDefault.css" rel="Stylesheet" type="text/css" />	


	<script type="text/javascript" src="/view/js/jquery.fancybox.js"></script>
	<script type="text/javascript" src="/view/js/docs.js"></script>


	<link rel="stylesheet" href="/view/css/bolt.css">

	<!--[if lt IE 9]>
