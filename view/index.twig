<body>


	<div class="container">

        <header class="sixteen columns">
            <h1 class="">
                <a href="{{ paths.root }}">Bolt <span>documentation</span></a>
            </h1>
            <h5>Version {{ version }}</h5>
            <hr />
            {# {{ menu() }} #} 
        </header>

			<div class="four columns sidebar sticky">

			<h3>Contents</h3>
			<ul>
			{% for link,name in menu %}
				<li {% if current==link %}class='current'{% endif %}><a href="/{{link}}">{{name}}</a>
					{% if current==link %}
					<ul>
						{% for link,name in submenu %}
							<li><a href="#{{link}}">{{name}}</a>
						{% endfor %}
					</ul>
					{% endif %}
				</li>
			{% endfor %}
			</ul>
			</div>


			<div class="eleven columns offset-by-one content">
				
				{{ source|raw }}

				<hr style='margin-top: 36px;'>

	<div style='float: left;'>
            <a href="https://twitter.com/share" class="twitter-share-button" data-dnt="true">Tweet</a>
