    <main>

        <section class="maininfo">
            <div class="maincolumn ">

                <div class="small-12 medium-12 large-9 large-push-3 columns content">

                    <a href="#sidebar" class="button hide-for-large-up jumpbutton">Jump to docs navigation</a>

                    <div class="community-notice hide-for-medium-down">
                        Have you not found what you are looking for? We are happy to help you in the <a href="https://discuss.bolt.cm/" target="_blank">forum</a> or on <a href="http://slack.bolt.cm/" target="_blank">Slack</a>.
                    </div>

                    {# temporary for the transition phase between 1.6 and 2.0
                    <p class="note">
                        <strong>Note:</strong> You are currently reading the documentation for <strong>Bolt 2.0</strong>.
                        Looking for the <a href="https://docs.bolt.cm/v16">documentation for Bolt version 1.6</a> instead?
                    </p>#}

                    {{ source|raw }}
                    {% include '_sub_submenu.twig' with {'section': requested_page } %}


                </div>

                <div class="small-12 medium-12 large-3 large-pull-9 end columns sidebar" id="sidebar">
                    <nav id="sidebar-nav">

                        <p>
                            {% if sitetitle == "Bolt documentation" %}
                                [ <strong>Documentation</strong> | <a href='https://manual.bolt.cm'>User manual</a> ]
                            {% else %}
                                [ <a href='https://docs.bolt.cm'>Documentation</a> | <strong>User manual</strong> ]
                            {% endif %}
                        </p>

                        <p>
                            <input type="text" id="searchbox" style="width: 100%;">
                        </p>

                        {% include '_sub_contents.twig' %}

                        <p style="font-size: 85%; margin-top: 2em;"><em>Current version: <strong>Bolt {{ version }}</strong></em>.</p>
                    </nav>
                </div>

            </div>
        </section>

